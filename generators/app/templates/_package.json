    "express-autoroute": "^2.1.0",
    "express-autoroute-json": "^3.5.0",
    "lodash": "^4.13.1",
    "mongoose": "^5.1.1",
    "mongoose-nconf-connect": "^2.2.0",
    "morgan": "^1.5.2",
    "nconf": "^0.9.1",
    "q": "^1.2.0",
    "winston": "^2.0.0"
  },
  "devDependencies": {
    "eslint": "^4.11.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "mocha": "^4.0.1"
  }
}
